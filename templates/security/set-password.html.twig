{% extends '::baseAlt.html.twig' %}

{% block body %}

    <div class="contentWrapper contentWrapper_lrg">

        <section>
            <div class="stage stage_login">

                <section>
                    <div class="loginHd">
                        <img src="{{ asset("/assets/media/images/logo_text.png") }}" class="img img_brand"
                             alt="Saint Mary's Press">
                    </div>
                    <!-- /loginHd -->
                </section>

                <section data-component="PasswordGuidelines">
                    <div class="stage-inset">
                        <div class="vr vr_x2 u-center">
                            <h1 class="hdg hdg_2">Create a New Password</h1>
                        </div>
                        {{ form_start(form) }}
                        {% if not form.vars.valid %}
                            <div class="error">
                                {{ form_errors(form) }}
                            </div>
                        {% endif %}
                        <ul class="vList vList_xlarge">

                            <li>
                                {{ form_label(form.password.password, null, { label_attr : { class : 'label required'}}) }}
                                {{ form_widget(form.password.password, { attr : { class : 'field_textbox mix-field_stretch js-password' }}) }}
                            </li>

                            <li>
                                {{ form_label(form.password.confirm, null, { label_attr : { class : 'label required'}}) }}
                                {{ form_widget(form.password.confirm, { attr : { class : 'field_textbox mix-field_stretch js-password-confirm' }}) }}
                            </li>


                            <li>
                                <div class="vr u-center password-guidelines">
                                    <p>Password Guidelines</p>
                                    <div class="rule-container">
                                        <div class="password-icons js-validation-length"><i
                                                    class="icn icn_checkmark"></i><i class="icn icn_close"></i></div>
                                        <div class="password-message">At least 6 characters' long</div>
                                    </div>
                                    <div class="rule-container">
                                        <div class="password-icons js-validation-case"><i class="icn icn_checkmark"></i><i
                                                    class="icn icn_close"></i></div>
                                        <div class="password-message">1 upper case letter</div>
                                    </div>
                                    <div class="rule-container">
                                        <div class="password-icons js-validation-number"><i
                                                    class="icn icn_checkmark"></i><i class="icn icn_close"></i></div>
                                        <div class="password-message">1 number</div>
                                    </div>
                                    <div class="rule-container">
                                        <div class="password-icons js-validation-special"><i
                                                    class="icn icn_checkmark"></i><i class="icn icn_close"></i></div>
                                        <div class="password-message">1 special character</div>
                                    </div>


                                </div>

                            </li>


                            <li>

                                <div class="vr u-center">
                                    <button class="btn" type="submit">Save Changes</button>
                                </div>
                                <div class="u-center">
                                    <a href="{{ url('student_landing_page') }}" class="btn btn_clean u-small">Cancel</a>
                                </div>

                            </li>
                        </ul>
                        <!-- /vList -->
                        {{ form_end(form) }}
                    </div>
                    <!-- /stage-inset -->
                </section>

            </div>
            <!-- /stage -->
        </section>

    </div>
    <!-- /contentWrapper -->

{% endblock %}
